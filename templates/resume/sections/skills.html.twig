<!-- Section skills -->
<section class="section-skills" id="section_skills">
    <div class="container text-center text-uppercase section-title">
        <i class="fas fa-sliders-h fa-2x align-middle"></i>
        &nbsp;
        <span class="h2 align-middle">{{ 'skills.title'|trans({}, 'resume') }}</span>
    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row m-0">
                    {% for i in 1..3 %}
                        {% set title = 'skills.' ~ i ~ 'th.title' %}

                        <div class="col-12 col-md-4 section-bloc">
                            <h5 class="text-center">{{ title|trans({}, 'resume') }}</h5>

                            {% for j in 1..4 %}
                                {% set name = 'skills.' ~ i ~ 'th.' ~ j ~ '.name' %}
                                {% set pert = 'skills.' ~ i ~ 'th.' ~ j ~ '.pert' %}

                                <div class="pb-1 pt-4">
                                    <span>{{ name|trans({}, 'resume') }}</span>
                                    <span class="float-right">{{ pert|trans({}, 'resume') }}
                                        <i class="fas fa-percentage"></i></span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" style="width:{{ pert|trans({}, 'resume') }}%"
                                         aria-valuenow="{{ pert|trans({}, 'resume') }}"
                                         aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>