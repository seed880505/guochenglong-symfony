{% extends "resume/base.html.twig" %}

{% block body %}

    {% if sent_result > 0 %}
        <div class="m-5 p-5">
            <div class="alert alert-success p-4" role="alert">
                <h4 class="alert-heading">{{ 'contact.success'|trans({}, 'resume') }}</h4>
                <hr>
                <p class="mb-0">{{ 'contact.success.msg'|trans({}, 'resume') }}</p>
            </div>
        </div>
    {% else %}
        <div class="m-5 p-5">
            <div class="alert alert-danger p-4" role="alert">
                <h4 class="alert-heading">{{ 'contact.failure'|trans({}, 'resume') }}</h4>
                <hr>
                <p class="mb-0">{{ 'contact.failure.msg'|trans({}, 'resume') }}</p>
            </div>
        </div>
    {% endif %}

{% endblock %}